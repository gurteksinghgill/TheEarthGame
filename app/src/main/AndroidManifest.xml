<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theearthgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheEarthGame">
        <activity android:name=".PlayerNamesActivity"></activity>
        <activity android:name=".TwoPlayerLoseActivity" />
        <activity android:name=".TwoPlayerWinActivity" />
        <activity android:name=".TwoPlayerQuestionsActivity" />
        <activity android:name=".OnePlayerLoseActivity" />
        <activity android:name=".OnePlayerWinActivity" />
        <activity android:name=".OnePlayerQuestionsActivity" />
        <activity android:name=".NumPlayersActivity" />
        <activity android:name=".HowToPlayActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>